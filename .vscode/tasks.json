{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Backend Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Frontend Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Start Full Application",
			"dependsOn": [
				"Start Backend Server",
				"Start Frontend Server"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm",
			"args": ["install"],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Build Backend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "build",
			"problemMatcher": ["$tsc"]
		},
		{
			"label": "Build Frontend",
			"type": "shell",
			"command": "npm",
			"args": ["run", "build"],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Test Backend",
			"type": "shell",
			"command": "npm",
			"args": ["test"],
			"options": {
				"cwd": "${workspaceFolder}/backend"
			},
			"group": "test",
			"problemMatcher": []
		},
		{
			"label": "Test Frontend",
			"type": "shell",
			"command": "npm",
			"args": ["test"],
			"group": "test",
			"problemMatcher": []
		}
	]
}